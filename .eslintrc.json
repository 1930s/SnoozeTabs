{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "constructor-super": "warn",
    "eqeqeq": "error",
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "quotes": ["error", "single"],
    "valid-typeof": "warn"
  }
}
