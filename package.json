{
  "name": "snoozetabs",
  "description": "An add-on to let you snooze your tabs for a while.",
  "version": "1.0.0",
  "author": "Blake Winton <bwinton@latte.ca>",
  "contributors": [
    "Les Orchard <me@lmorchard.com> (http://lmorchard.com/)"
  ],
  "bugs": {
    "url": "https://github.com/bwinton/SnoozeTabs/issues"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^3.10.2",
    "node-sass": "^3.13.0",
    "npm-run-all": "^3.1.2",
    "onchange": "^3.2.0",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "storybook-host": "^1.0.8",
    "web-ext": "^1.4.0"
  },
  "homepage": "https://github.com/bwinton/SnoozeTabs#readme",
  "keywords": [
    "snooze",
    "tabs",
    "webextension",
    "firefox",
    "add-on"
  ],
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bwinton/SnoozeTabs.git"
  },
  "scripts": {
    "start": "npm run build && npm-run-all --parallel watch run storybook",
    "build": "npm run clean && npm-run-all --parallel copy:assets bundle:js bundle:css && npm run package",
    "watch": "onchange src -- npm run build",
    "run": "web-ext run -s dist --firefox=firefoxdeveloperedition",
    "clean": "rm -rf dist && mkdir dist",
    "copy:assets": "cp -rnv src/{manifest.json,icons} dist/ && mkdir -p dist/popup && cp -rnv src/popup/*.html dist/popup/",
    "bundle:js": "rollup -c --environment entry:background && rollup -c --environment entry:popup/snooze-content",
    "bundle:css": "mkdir -p dist/popup && node-sass src/popup/snooze.scss > dist/popup/snooze.css",
    "package": "web-ext build -s dist -a .",
    "lint": "eslint . && web-ext lint",
    "test": "npm run build && web-ext run -s dist",
    "storybook": "start-storybook -s ./dist -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "moment": "^2.17.1",
    "rc-calendar": "^7.5.1",
    "rc-time-picker": "^2.2.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  }
}
