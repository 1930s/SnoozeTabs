{
  "applications": {
    "gecko": {
      "id": "snoozetabs@mozilla.com"
    }
  },

  "default_locale": "en_US",
  "description": "__MSG_extDesc__",
  "manifest_version": 2,
  "name": "snoozetabs",
  "author": "Mozilla (https://mozilla.org/)",
  "homepage_url": "https://github.com/bwinton/SnoozeTabs#readme",
  "icons": {
    "48": "icons/bell_icon.svg"
